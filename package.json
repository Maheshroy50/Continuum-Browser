{
    "name": "continuum-browser",
    "private": true,
    "version": "0.0.1",
    "description": "A task-first, privacy-native browser that preserves context and lets you resume exactly where you left off.",
    "author": "Mahesh Rao",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "dev:vite": "vite --port 5173",
        "build": "tsc && vite build && electron-builder",
        "build:mac": "tsc && vite build && electron-builder --mac",
        "build:win": "tsc && vite build && electron-builder --win",
        "build:linux": "tsc && vite build && electron-builder --linux",
        "build:all": "tsc && vite build && electron-builder -mwl",
        "build:frontend": "vite build",
        "preview": "vite preview",
        "lint": "eslint ."
    },
    "dependencies": {
        "@mozilla/readability": "^0.6.0",
        "@types/dompurify": "^3.0.5",
        "adm-zip": "^0.5.16",
        "clsx": "^2.1.0",
        "dompurify": "^3.3.1",
        "electron-chrome-extensions": "^4.9.0",
        "electron-updater": "^6.7.3",
        "i18next": "^25.7.3",
        "lucide-react": "^0.344.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^16.5.0",
        "react-markdown": "^10.1.0",
        "tailwind-merge": "^2.2.1",
        "y-indexeddb": "^9.0.12",
        "y-webrtc": "^10.3.0",
        "yjs": "^13.6.29",
        "zustand": "^4.5.1"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.5.7",
        "@types/node": "^20.11.20",
        "@types/react": "^18.2.58",
        "@types/react-dom": "^18.2.19",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "electron": "^35.0.1",
        "electron-builder": "^24.13.3",
        "eslint": "^8.56.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vite": "^5.1.4",
        "vite-plugin-electron": "^0.28.2",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "build": {
        "appId": "com.flow.browser",
        "productName": "Continuum",
        "files": [
            "dist/index.html",
            "dist/assets/**/*",
            "dist-electron/**/*"
        ],
        "directories": {
            "output": "release"
        },
        "publish": {
            "provider": "github",
            "owner": "Maheshroy50",
            "repo": "Continuum-Browser"
        },
        "mac": {
            "icon": "Continuum.icns",
            "target": [
                "dmg",
                "zip"
            ],
            "extendInfo": {
                "NSBluetoothAlwaysUsageDescription": "Continuum uses Bluetooth to connect to security keys and phones for Passkey authentication.",
                "NSBluetoothPeripheralUsageDescription": "Continuum uses Bluetooth to connect to security keys and phones for Passkey authentication.",
                "NSCameraUsageDescription": "Continuum uses camera access for scanning QR codes during authentication.",
                "NSMicrophoneUsageDescription": "Continuum uses microphone access for web applications that require it."
            },
            "hardenedRuntime": true,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist"
        },
        "win": {
            "target": "nsis",
            "icon": "resources/icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Network;WebBrowser"
        },
        "protocols": [
            {
                "name": "HTTP Protocol",
                "role": "Viewer",
                "schemes": [
                    "http",
                    "https"
                ]
            },
            {
                "name": "Continuum Auth",
                "schemes": [
                    "continuum"
                ]
            }
        ]
    }
}